    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "next": "14.2.15",
    "next-intl": "^4.3.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
